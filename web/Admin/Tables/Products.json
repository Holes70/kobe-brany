{
  "id": {
    "type": "number",
    "show_in_table": false,
    "show_in_form": false
  },
  "image": {
    "type": "image",
    "show_in_table": true,
    "show_in_form": true,
    "upload_action": "upload_product_image",
    "required": true
  },
  "name": {
  "show_in_table": true,
  "name_in_table": "Produkt",
  "show_in_form": true,
  "required": true
  },
  "price": {
    "type": "number",
    "show_in_table": true,
    "name_in_table": "Cena",
    "show_in_form": true,
    "required": true,
    "unit": "€"
  },
  "vat": {
    "type": "number",
    "show_in_table": false,
    "name_in_table": "DPH",
    "show_in_form": true,
    "required": true,
    "step": 1
  },
  "available": {
    "type": "checkbox",
    "default_value": true,
    "show_in_table": true,
    "name_in_table": "Dostupný",
    "show_in_form": true
  },
  "count": {
    "type": "number",
    "show_in_table": true,
    "name_in_table": "Skladom",
    "show_in_form": true,
    "step": 1
  },
  "description": {
    "type": "text",
    "show_in_table": false,
    "name_in_table": "Popis",
    "show_in_form": true
  },
  "type": {
    "type": "radio",
    "default_value": 1,
    "radio": {"1": "Na mieru","2": "Príslušenstvo"},
    "show_in_table": false,
    "name_in_table": "Typ",
    "show_in_form": true
  },
  "state":  {
    "type": "radio",
    "default_value": 1,
    "radio": {"1": "Klasický","2": "Top", "3": "Odporúčame"},
    "show_in_table": false,
    "name_in_table": "Označenie",
    "show_in_form": true
  },
  "discount": {
    "type": "number",
    "show_in_table": false,
    "name_in_table": "Zľava",
    "show_in_form": true,
    "required": false,
    "step": 1,
    "unit": "%"
  }
}